<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>production-artifact</id>
    <formats>
        <format>jar</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>shared</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.google.cloudspannerecosystem:google-cloud-spanner-change-watcher:jar:</include>
                <include>com.google.cloudspannerecosystem:google-cloud-spanner-change-publisher:jar:</include>
                <include>com.google.cloudspannerecosystem:google-cloud-spanner-change-archiver:jar:</include>
                <include>com.google.cloudspannerecosystem:samples/spanner-change-watcher-samples:jar:</include>
                <include>com.google.cloudspannerecosystem:samples/spanner-change-publisher-samples:jar:</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>